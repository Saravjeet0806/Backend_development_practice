<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crude Operations with EJS</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="w-full min-h-screen bg-zinc-900 p-10 text-white">
        <div class="nav mb-10">
            <a class="text-blue-500" href="/">Back to Home</a>
        </div>
        <h1 class="text-3xl mb-3">All users</h1>
        <div class="users flex gap-3 flex-wrap">
            <% users.forEach(function(user) { %>
                <div class="user w-72 bg-zinc-800 p-4 rounded-lg">
                    <div class="w-full h-52 rounded-lg bg-zinc-500 overflow-hidden">
                        <img class="w-full h-full object-cover" src="<%= user.image %>" alt="">
                    </div>
                    <h3 class="text-2xl tracking-tighter mt-3"><%= user.name %></h3>
                    <h5 class="text-zinc-400"><%= user.email %></h5>
                    <div class="flex gap-3 mt-4">
                        <a class="text-blue-400 hover:underline" href="/edit/<%= user._id %>">Edit User</a>
                        <a class="text-red-500 hover:underline" href="/delete/<%= user._id %>">Delete User</a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>
