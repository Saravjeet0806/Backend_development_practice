<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <div class="w-full  bg-zinc-900 text-white p-10">
        <a class="bg-red-500 px-3 py-2 rounded-md mb-3 inline-block" href="/logout">Logout</a>
        <h3 class="3xl mb-5 mt-3">Hello, <%= user.name %>
        </h3>
        <h5>Create a post</h5>
        <form action="/post" method="post">
            <textarea name="content" placeholder="What's on your mind?"
                class="p-3 w-1/3 resize-none bg-transparent bg-zinc-800 rounded-md border-2 block" name=""></textarea>
            <input type="submit" class="px-5 py-2 bg-blue-500 rounded-md text-white block mt-3 w-30">
        </form>
        <div class="posts mt-20">
            <h3>Your posts</h3>
            <div class="postcontainer mt-5">
                <% user.posts.reverse().forEach(function(post){ %>
                    <div class="post w-1/3 p-5 bg-zinc-800 border-[1px] rounded-md mb-4">
                        <h4 class="text-blue-500"><%= user.username %></h4>
                        <p><%= post.content %></p>
                        <div class="btns flex mt-5">
                            <a class="text-blue-500" href="">Like</a>
                        </div>
                    </div>

                    <%}) %>
            </div>
        </div>

    </div>
    </div>
</body>

</html>